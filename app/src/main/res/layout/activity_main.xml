<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.epicodus.myrestaurants.ui.MainActivity"
    android:background="@color/colorPrimaryLight">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/background"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/appNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_restaurants"
        android:textColor="@color/colorIcons"
        android:textSize="42sp"
        android:textStyle="bold"
        android:layout_marginBottom="48dp"
        android:layout_above="@+id/findRestaurantsButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/findRestaurantsButton"
        android:text="@string/find_restaurants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:textColor="@color/colorIcons"
        android:layout_above="@+id/savedRestaurantsButton"
        android:layout_marginBottom="10dp"
        android:layout_alignLeft="@+id/appNameTextView"
        android:layout_alignStart="@+id/appNameTextView"
        android:layout_alignRight="@+id/appNameTextView"
        android:layout_alignEnd="@+id/appNameTextView" />

    <Button
        android:id="@+id/savedRestaurantsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="Saved Restaurants"
        android:textColor="@color/colorIcons"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/findRestaurantsButton"
        android:layout_alignStart="@+id/findRestaurantsButton"
        android:layout_alignRight="@+id/findRestaurantsButton"
        android:layout_alignEnd="@+id/findRestaurantsButton" />

</RelativeLayout>
